<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SunucuBakimKontrol</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="shortcut icon" href="/petlas.ico" type="image/x-icon">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light custom-navbar fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("MainPage", "Home")">
                <img src="~/images/logo.png" alt="Logo" class="logo">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="@Url.Action("MainPage", "Home")">Ana Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("AddRemoveServer", "Home")">Sunucu Ekle/Pasife Çek</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("AddRemoveControl", "Home")">Kontrol Ekle/Pasife Çek</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Maintenance", "Home")">Bakım</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="~/images/user.png" alt="User Icon" class="user-icon">
                            @User.Identity.Name
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Profile", "Home")">Profil</a>
                            </li>

                            <li><a class="dropdown-item" href="@Url.Action("Logout", "Account")">Çıkış</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-5 pt-5">
        @RenderBody()
    </div>
</body>
</html>